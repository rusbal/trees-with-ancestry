
    <div class="message">
      <div>
        <div class="date">
          <%= message.created_at.strftime("%b %d, %Y") %>
        </div>
        <div class="msg">
          <%= link_to message.message, message %>
        </div>
      </div>
      <div class="options">
        <%= link_to "Reply", new_message_path(:parent_id => message) %> |
        <%= link_to "Delete", message_path(message), method: :delete %>
      </div>
    </div>
